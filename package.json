{
  "name": "@schedule-it/api",
  "version": "0.2.0",
  "private": true,
  "description": "Api server for @schedule-it/client",
  "author": "Zaconly <thomas.vaucois@viacesi.fr>",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rimraf -rf ./dist",
    "compile": "tsc -p tsconfig.prod.json",
    "dev": "nodemon",
    "start": "cross-env NODE_ENV=production node -r dotenv/config dist/index.js",
    "generate": "graphql-codegen --config codegen.yml",
    "faker:gen": "sequelize-cli db:seed:all --debug",
    "faker:clean": "sequelize-cli db:seed:undo:all",
    "lint": "eslint --fix .",
    "format": "prettier --write \"./src/**/*.{ts,json}\""
  },
  "dependencies": {
    "apollo-server-cache-redis": "^1.2.2",
    "apollo-server-express": "^2.15.1",
    "apollo-server-plugin-response-cache": "^0.5.3",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "connect-redis": "^5.0.0",
    "cors": "^2.8.5",
    "dataloader-sequelize": "^2.3.0",
    "express": "^4.17.3",
    "express-session": "^1.17.1",
    "graphql": "^15.3.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-middleware": "^4.0.2",
    "graphql-passport": "^0.6.3",
    "graphql-relay": "^0.6.0",
    "graphql-sequelize": "^9.4.0",
    "graphql-shield": "^7.3.2",
    "helmet": "^3.23.3",
    "ioredis": "^4.17.3",
    "mysql2": "^2.1.0",
    "node-cron": "^2.0.3",
    "nodemailer": "^6.4.10",
    "nodemailer-express-handlebars": "^4.0.0",
    "passport": "^0.4.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.3.3",
    "sequelize-typescript": "^2.0.0-beta.0",
    "shortid": "^2.2.15",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.0",
    "@graphql-codegen/typescript": "1.17.0",
    "@graphql-codegen/typescript-resolvers": "1.17.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/connect-redis": "^0.0.14",
    "@types/express-session": "^1.17.0",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/helmet": "^0.0.47",
    "@types/ioredis": "^4.17.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.23",
    "@types/node-cron": "^2.0.3",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.4",
    "@types/shortid": "^0.0.29",
    "@types/uuid": "^8.0.0",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "apollo-server-plugin-base": "^0.9.1",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "faker": "^4.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "sequelize-cli": "^6.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,json}": [
      "yarn lint"
    ]
  }
}
